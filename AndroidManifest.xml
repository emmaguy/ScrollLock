<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.eguy"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="11"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:label="@string/app_name" android:icon="@drawable/scroll_lock" android:theme="@style/darkTheme">
        <activity android:name=".ui.TimelineActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".oauth.AuthenticateActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="scrolllock" android:host="callback"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.TweetViewerActivity"/>

        <provider android:name="com.eguy.db.TweetProvider"
                  android:authorities="com.eguy.db.TweetProvider" />
    </application>
</manifest>
