<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="dev.emmaguy.twitterclient"
          android:versionCode="1"
          android:versionName="1.0">
          
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application android:label="@string/app_name" 
        android:icon="@drawable/scroll_lock" 
        android:theme="@style/darkTheme"
        android:allowBackup="true">
        <activity android:name="dev.emmaguy.twitterclient.ui.TimelineActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="dev.emmaguy.twitterclient.oauth.AuthenticateActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:scheme="scrolllock" android:host="callback"/>
            </intent-filter>
        </activity>
       <activity android:name="dev.emmaguy.twitterclient.ui.TweetViewerActivity"/>

        <provider android:name="dev.emmaguy.twitterclient.db.TweetProvider"
                  android:authorities="dev.emmaguy.twitterclient.db.TweetProvider" />
    </application>
</manifest>
