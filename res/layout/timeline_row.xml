<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionBarLayoutRt"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp" >

        <TextView
            android:id="@+id/username_textview"
            style="?username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingLeft="3dp" />

        <TextView
            android:id="@+id/timestamp_textview"
            style="?timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingRight="3dp" />
    </LinearLayout>

    <LinearLayout
        style="?tweetContents_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal" >

            <ImageView
                android:id="@+id/main_avatar_imageview"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/profilePicture"
                android:layout_marginBottom="16dp"
        		android:layout_marginRight="8dp" />

            <ImageView
                android:id="@+id/small_avatar_imageview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|right"
                android:contentDescription="@string/profilePicture" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tweet_textview"
                style="?tweetText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingLeft="8dp" />

            <TextView
                android:id="@+id/retweet_information_textview"
                style="?retweetInfo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>