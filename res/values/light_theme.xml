<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="lightTheme" parent="android:style/Theme.Holo.Light">
        <item name="tweetContents_row">@style/tweetContents_row_light</item>
        <item name="refreshBar">@style/action_bar_light</item>
        <item name="username">@style/username_light</item>
        <item name="tweetText">@style/tweetText_light</item>
        <item name="timestamp">@style/timestamp_light</item>
        <item name="retweetInfo">@style/retweetInfo_light</item>
        <item name="dm_button">@style/dm_button_icon_light</item>
        <item name="mentions_button">@style/mentions_button_icon_light</item>
        <item name="home_button">@style/home_button_icon_light</item>
    </style>

    <style name="dm_button_icon_light">
        <item name="android:drawable">@drawable/message</item>
    </style>

    <style name="mentions_button_icon_light">
        <item name="android:drawable">@drawable/mentions</item>
    </style>

    <style name="home_button_icon_light">
        <item name="android:drawable">@drawable/home</item>
    </style>

    <style name="action_bar_light" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/refresh_bar_light</item>
    </style>

    <style name="tweetContents_row_light">
        <item name="android:background">@drawable/timeline_tweet_contents_light</item>
    </style>

    <style name="username_light" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Gray3</item>
    </style>

    <style name="tweetText_light" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/DarkBlue</item>
    </style>

    <style name="retweetInfo_light" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/DarkSlateBlue</item>
    </style>

    <style name="timestamp_light" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/DarkSlateBlue</item>
    </style>

</resources>