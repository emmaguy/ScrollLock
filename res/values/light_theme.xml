<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="lightTheme" parent="android:Theme">
        <item name="timeline_row">@style/timeline_row_light</item>
        <item name="tweetContents_row">@style/tweetContents_row_light</item>
        <item name="refreshBar">@style/refreshBar_light</item>
        <item name="username">@style/username_light</item>
        <item name="tweetText">@style/tweetText_light</item>
        <item name="timestamp">@style/timestamp_light</item>
    </style>

    <style name="timeline_row_light">
        <item name="android:background">@drawable/timeline_row_light</item>
    </style>

    <style name="tweetContents_row_light">
        <item name="android:background">@drawable/timeline_tweet_contents_light</item>
    </style>

    <style name="refreshBar_light">
        <item name="android:background">@drawable/refresh_bar_light</item>
    </style>

    <style name="username_light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Gray3</item>
    </style>

    <style name="tweetText_light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/DarkBlue</item>
    </style>

    <style name="timestamp_light" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/DarkSlateBlue</item>
    </style>

</resources>