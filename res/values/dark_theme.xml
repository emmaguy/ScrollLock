<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="darkTheme" parent="@style/Theme.Sherlock">
        <item name="tweetContents_row">@style/tweetContents_row_dark</item>
        <item name="refreshBar">@style/action_bar_dark</item>
        <item name="username">@style/username_dark</item>
        <item name="tweetText">@style/tweetText_dark</item>
        <item name="timestamp">@style/timestamp_dark</item>
        <item name="retweetInfo">@style/retweetInfo_dark</item>
        <item name="dm_button">@style/dm_button_icon_dark</item>
        <item name="mentions_button">@style/mentions_button_icon_dark</item>
        <item name="home_button">@style/home_button_icon_dark</item>
    </style>

    <style name="dm_button_icon_dark">
        <item name="android:icon">@drawable/mentions_dark</item>
    </style>
    
    <style name="mentions_button_icon_dark">
        <item name="android:icon">@drawable/mentions_dark</item>
    </style>
    
    <style name="home_button_icon_dark">
        <item name="android:icon">@drawable/home_dark</item>
    </style>
    
    <style name="tweetContents_row_dark">
        <item name="android:background">@drawable/timeline_tweet_contents_dark</item>
    </style>

    <style name="action_bar_dark" parent="@style/Theme.Sherlock.Light.DarkActionBar">
    	<item name="android:background">@drawable/refresh_bar_dark</item>
	</style>

    <style name="username_dark" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/LightGrey</item>
    </style>

    <style name="tweetText_dark" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/DarkGray</item>
    </style>

    <style name="retweetInfo_dark" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/Gray25</item>
    </style>

    <style name="timestamp_dark" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/Gray25</item>
    </style>

</resources>